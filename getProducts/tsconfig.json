{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",                       /* Base directory to resolve non-absolute module names. */
    "paths": {
      "/opt/nodejs/mainHelpers": ["../layers/mainHelpersUtil/mainHelpers"],
      "/opt/nodejs/db": ["../layers/dbUtil/db"],
      "/opt/nodejs/types": ["../layers/typesUtil/types"]
    },
  },
  "exclude": ["node_modules"],
}